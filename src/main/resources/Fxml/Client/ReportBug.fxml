<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="750" prefWidth="850" style="-fx-padding: 20;" styleClass="anchor-pane" stylesheets="@../../Styles/ReportBug.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.maviharshit.bankingsystem.Controllers.Client.ReportBugController">

    <VBox spacing="16" style="-fx-background-color: #f9f9f9; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;" styleClass="vbox" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Report a Bug" />

        <Label style="-fx-font-size: 16px;" text="Describe the issue:" />
        <TextArea fx:id="bugDescription_field" prefRowCount="10" style="-fx-font-size: 14px;" styleClass="text-area" wrapText="true" />

        <Label style="-fx-font-size: 16px;" text="Your Payee ID:" />
        <TextField fx:id="payeeId_field" style="-fx-font-size: 14px;" styleClass="text-field" editable="false"/>

        <HBox alignment="CENTER_RIGHT" spacing="20">
            <Button fx:id="sendReport_btn" prefWidth="140" style="-fx-background-color: #132A13; -fx-text-fill: white; -fx-font-size: 14px;" text="Send Report" />
        </HBox>
    </VBox>

</AnchorPane>
